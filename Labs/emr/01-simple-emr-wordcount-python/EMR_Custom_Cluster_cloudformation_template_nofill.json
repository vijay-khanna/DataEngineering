{
	"AWSTemplateFormatVersion": "2010-09-09",
	"Description" : "EMR Cluster for demo. will launch in public subnet for ease of testing. Public cluster is not recommended for producion, make appropriate changes to secure the cluster for production use. The Hadoop components cna be changed in the template. Vijay Khanna.",
	"Conditions": {
		"Hbase": {
			"Fn::Equals": [{
					"Ref": "Applications"
				},
				"Hbase"
			]
		},
		"Spark": {
			"Fn::Equals": [{
					"Ref": "Applications"
				},
				"Spark"
			]
		}
	},
	"Description": "myProdCluster",
	"Mappings": {

	},
	"Outputs": {

	},
	"Parameters": {
		"Applications": {
			"AllowedValues": [
				"Spark",
				"AllRecommended"
			],
			"Description": "Cluster setup",
			"Default": "AllRecommended",
			"Type": "String"
		},


		"KeyName": {
			"Description": "Must be an existing Keyname",
			
			"Type": "AWS::EC2::KeyPair::KeyName"


		},
		"LogUri": {
			"Description": "Mention the existing S3 log bucket (/folder). E.g. s3://bucket-name/log-folder/",
			"Default": "s3://<bucket-name>/<log-folder>/",
			"Type": "String"
		},


		"MasterInstanceType": {
			"Description": "Instance type to be used for the master instance.",
			"Type": "String",
			"AllowedValues": [
				"m5.2xlarge",
				"m5.xlarge"
			],
			"Default": "m5.2xlarge"
		},
		"NumberOfCoreInstances": {
			"Default": 2,
			"Description": "Must be a valid number",
			"Type": "Number"
		},
		"CoreInstanceType": {
			"Description": "Instance type to be used for core instances.",
			"Type": "String",
			"AllowedValues": [
				"m5.2xlarge",
				"m5.xlarge"
			],
			"Default": "m5.2xlarge"
		},
		"ReleaseLabel": {
			"Default": "emr-5.30.0",
			"Description": "Must be a valid EMR release version",
			"Type": "String"
		},
		
			"AdditionalSecurityGroupForSSH": {
			"Description": "Additional Public Security Group for SSH to Master. ONLY FOR TESTING. NOT RECOMMENDED FOR PRODUCTION",
			"Type": "AWS::EC2::SecurityGroup::Id"
		},
				

		"SubnetID": {
			"Description": "Must be Valid public subnet ID. ONLY FOR TEST PURPOSE. NOT RECOMMENDED FOR PRODUCTION. ",
			
			"Type": "AWS::EC2::Subnet::Id"
		}
	},
	"Resources": {
		"EMRCluster": {
			"DependsOn": [
				"EMRClusterServiceRole",
				"EMRClusterinstanceProfileRole",
				"EMRClusterinstanceProfile"
			],
			"Properties": {
				"Applications": [{
						"Name": "Ganglia"
					},
					{
						"Name": "Hadoop"
					},
					{
						"Name": "Spark"
					},
					{
						"Name": "Hive"
					},
					{
						"Name": "Tez"
					},
					{
						"Name": "Zeppelin"
					},
					{
						"Name": "Oozie"
					},
					{
						"Name": "Hue"
					},
					{
						"Name": "Presto"
					},
					{
						"Name": "Pig"
					},
									
					{
						"Name": "JupyterHub"
					}

				],
				"AutoScalingRole": "EMR_AutoScaling_DefaultRole",
				"Configurations": [{
						"Classification": "hive-site",
						"ConfigurationProperties": {
							"hive.metastore.client.factory.class": "com.amazonaws.glue.catalog.metastore.AWSGlueDataCatalogHiveClientFactory"
						}
					},
					{
						"Classification": "spark",
						"ConfigurationProperties": {
							"maximizeResourceAllocation": "true"
						}
					},
					{
						"Classification": "presto-connector-hive",
						"ConfigurationProperties": {
							"hive.metastore.glue.datacatalog.enabled": "true"
						}
					},
					{
						"Classification": "spark-hive-site",
						"ConfigurationProperties": {
							"hive.metastore.client.factory.class": "com.amazonaws.glue.catalog.metastore.AWSGlueDataCatalogHiveClientFactory"
						}
					}
				],
				"EbsRootVolumeSize": 100,
				"Instances": {
					"AdditionalMasterSecurityGroups": [
						{"Ref": "AdditionalSecurityGroupForSSH"}
					],
					"AdditionalSlaveSecurityGroups": [
						{"Ref": "AdditionalSecurityGroupForSSH"}
					],
					"CoreInstanceGroup": {
						"EbsConfiguration": {
							"EbsBlockDeviceConfigs": [{
								"VolumeSpecification": {
									"SizeInGB": "50",
									"VolumeType": "gp2"
								},
								"VolumesPerInstance": "1"
							}],
							"EbsOptimized": "true"
						},
						"InstanceCount": 2,
						"InstanceType": {
							"Ref": "CoreInstanceType"
						},
						"Market": "ON_DEMAND",
						"Name": "Core"
					},
					"MasterInstanceGroup": {
						"EbsConfiguration": {
							"EbsBlockDeviceConfigs": [{
								"VolumeSpecification": {
									"SizeInGB": "50",
									"VolumeType": "gp2"
								},
								"VolumesPerInstance": "1"
							}],
							"EbsOptimized": "true"
						},
						"InstanceCount": 1,
						"InstanceType": {
							"Ref": "MasterInstanceType"
						},

						"Market": "ON_DEMAND",
						"Name": "Master"
					},
					"Ec2KeyName": {
						"Ref": "KeyName"
					},
					"Ec2SubnetId": {
						"Ref": "SubnetID"
					},
					"TerminationProtected": false
				},
				"Tags": [{
						"Key": "Name",
						"Value": {"Fn::Join" : ["EMR-:",[{"Ref": "AWS::StackName"}]]}
					}

				],


				"JobFlowRole": {
					"Ref": "EMRClusterinstanceProfile"
				},
				"LogUri": {
					"Ref": "LogUri"
				},
				"Name": {

					"Ref": "AWS::StackName"
				},


				"ReleaseLabel": {
					"Ref": "ReleaseLabel"
				},
				"ServiceRole": {
					"Ref": "EMRClusterServiceRole"
				},
				"VisibleToAllUsers": true
			},
			"Type": "AWS::EMR::Cluster"
		},
		"EMRClusterServiceRole": {
			"Type": "AWS::IAM::Role",
			"Properties": {
				"AssumeRolePolicyDocument": {
					"Version": "2012-10-17",
					"Statement": [{
						"Effect": "Allow",
						"Principal": {
							"Service": [
								"elasticmapreduce.amazonaws.com"
							]
						},
						"Action": [
							"sts:AssumeRole"
						]
					}]
				},
				"Tags": [{
						"Key": "Name",
						"Value": {"Fn::Join" : ["EMR-:",[{"Ref": "AWS::StackName"}]]}
					}

				],
				"ManagedPolicyArns": [
					"arn:aws:iam::aws:policy/service-role/AmazonElasticMapReduceRole"
				],
				"Path": "/"
			}
		},
		"EMRClusterinstanceProfileRole": {
			"Type": "AWS::IAM::Role",
			"Properties": {
				"AssumeRolePolicyDocument": {
					"Version": "2012-10-17",
					"Statement": [{
						"Effect": "Allow",
						"Principal": {
							"Service": [
								"ec2.amazonaws.com"
							]
						},
						"Action": [
							"sts:AssumeRole"
						]
					}]
				},
				"Tags": [{
						"Key": "Name",
						"Value": {"Fn::Join" : ["EMR-:",[{"Ref": "AWS::StackName"}]]}
					}

				],
				"ManagedPolicyArns": [
					"arn:aws:iam::aws:policy/service-role/AmazonElasticMapReduceforEC2Role"
				],
				"Path": "/"
			}
		},
		"EMRClusterinstanceProfile": {
			"Type": "AWS::IAM::InstanceProfile",
			"Properties": {
				"Path": "/",
				
				"Roles": [{
					"Ref": "EMRClusterinstanceProfileRole"
				}]
			}
		}
	}
}
